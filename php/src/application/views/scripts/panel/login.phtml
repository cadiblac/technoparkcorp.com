<?=$this->headTitle()?>
<?=$this->headMeta()?>
<?=$this->headLink()?>
<?=$this->headStyle()?>
</head>
<body style="padding:30px; font-size: 1.2em;">
    
<?=$this->forma()
    ->addBehavior('redirect')
    ->addField('text', 'email')
        ->fieldLabel('Email')
        ->fieldAttrib('size', 30)
    ->addField('text', 'password')
        ->fieldLabel('Password')
        ->fieldAttrib('size', 20)
        ->fieldAttrib('type', 'password')
    ->addField('submit')
        ->fieldValue('Login')
        ->fieldAttrib('class', 'btn')
        ->fieldAction(
            '
            false;
            $resolver = new Model_Auth_Resolver();
            do {
                $pwd = $resolver->resolve(${email}, "");
            } while (!$pwd && $resolver->hasMore());
            if (!$pwd) {
                logg("Invalid login attempt: %s", ${email});
                FaZend_Exception::raise(
                    "Login_Exception",
                    "User with this email is not found"
                );
            }
            if ($pwd != ${password}) {
                logg("Invalid password provided for: %s", ${email});
                FaZend_Exception::raise(
                    "Login_Exception",
                    "Invalid password"
                );
            }
            Model_User::logIn(${email});
            '
        )
    ?>
</body>
</html>